(ns app.actions
  (:require [feathers.services :as svc]
            [app.client :as client]))

(def users (svc/service client/app "users"))

(def messages (svc/service client/app "messages"))

(defn mk-message [text]
  (svc/create messages #js{:text text}))

(defn get-message [& [config]]
  (svc/find messages (clj->js config)))
